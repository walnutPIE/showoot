<div class="page-content">
	<div class="account-page">
		<div class="account-inner">
			<div class="account-center">
				<div class="account-content">
					<!--div class="account-logo">
						<img alt="" src="assets/img/logo2.png">
					</div-->
					<div class="account-title">
						<h1 class="text-align-center">쇼옷</h1>
					</div>
					<div class="account-form">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
							<div class="input-list">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"이메일" %>
							</div>
							<div class="input-list">
                <%= f.password_field :password, placeholder: "비밀번호" ,autocomplete: "off" %>
							</div>
							<div class="input-list">
								<% if devise_mapping.rememberable? -%>
									<div class="field">
										<%= f.check_box :remember_me %>
										<%= f.label :remember_me %>
									</div>
								<% end -%>
							</div>
							<div class="input-list input_btn">
                <%= f.button class:"button button-big button-fill account-btn" do%>
                  로그인
                <% end %>
							</div>
              <p class="text-align-center">
                <%= link_to "회원가입", new_user_registration_path %> | <%= link_to "비밀번호 찾기", "#" %>
              </p>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
